<% content_for :body_content_title do %>
  <%= @property.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @property.name %>
    </p>
  </section>
  <section>
    <h1>P Img</h1>
    <p>
      <%= image_fu @property.p_img, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @property.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="properties">
      <% @properties.each do |property| %>
        <li>
          <%= link_to property.name, refinery.properties_property_path(property) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
